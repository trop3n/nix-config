// ~/.config/rofi/config.rasi
// rofi configuration file
// inspired by Nordic colors
// created by : cosmo

// configuration
configuration {
  display-drun: "Applications:";
  display-window: "Windows:";
  drun-display-format: "{name}";
  font: "Cascadia Code 12";
  modi: "window,run,drun";
  show-icons: true;
}

@theme "/dev/null"

// colors
* {
  bg: #0f1c21;         // Deep background
  bg-alt: #2E3440;     // Darker alternate background
  bg-selected: #88C0D0; // Highlight background (cyan shade)
  fg: #ECEFF4;         // Main foreground (light white-blue)
  fg-alt: #8FBCBB;     // Alternate foreground (muted teal)
  
  border: 1;
  margin: 0;
  padding: 0;
  spacing: 0;
}

// window
window {
  width: 40%;
  background-color: @bg;
  border-color: @fg-alt;
}

// element
element {
  padding: 8 12;
  background-color: transparent;
  text-color: @fg-alt;
}
element selected {
  text-color: @bg;
  background-color: @bg-selected;
}
element-text {
  background-color: transparent;
  text-color: inherit;
  vertical-align: 0.5;
}
element-icon {
  size: 14;
  padding: 0 10 0 0;
  background-color: transparent;
}

// inputs
entry {
  padding: 12;
  background-color: @bg-alt;
  text-color: @fg;
}
inputbar {
  children: [prompt, entry];
  background-color: @bg;
}
prompt {
  enabled: true;
  padding: 12 0 0 12;
  background-color: @bg-alt;
  text-color: @fg;
}

// list
listview {
  background-color: @bg;
  columns: 1;
  lines: 10;
}
mainbox {
  children: [inputbar, listview];
  background-color: @bg;
}